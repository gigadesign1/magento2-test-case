<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content.aside">
            <block class="Magento\Catalog\Block\Product\Widget\NewWidget" name="product.view.new.products"
                   template="Magento_Catalog::product/widget/new/content/new_list.phtml"
                   after="catalog.product.related">
                <action method="setProductsCount">
                    <argument name="products_count" xsi:type="string">5</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
